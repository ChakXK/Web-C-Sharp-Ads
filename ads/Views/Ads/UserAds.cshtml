@using PagedList.Mvc
@model PagedList.IPagedList<ads.Models.Ad>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/ADSLayout.cshtml";
}
<section class="ftco-section bg-light ftco-bread">
    <div class="container">
        <div class="row no-gutters slider-text align-items-center">
            <div class="col-md-10 ftco-animate">
                <p class="breadcrumbs"><span class="mr-2"><a href="/Ads/Index">Домой</a></span> <span>Объявления пользователя</span></p>
                <hr />
            </div>
        </div>
    </div>
</section>

        <section class="ftco-section">
            <div class="container">
                <div class="row">
                    <div class="col-lg-12">
                        <div class="row no-gutters">

                            @foreach (var item in Model)
                            {
                            <div class="col-md-4 ftco-animate">
                                @if (@item.Image != null)
                                {
                                    <div class="photography-entry img image-popup d-flex justify-content-center align-items-center" style="background-image:  url(@Url.Content(
"~/Content/userfiles/" + @item.Image.id + @item.Image.name));">
                                        <div class="overlay"></div>
                                            <div class="text text-center">
                                                <div class="text text-2 pt-2 mt-3">
                                                    <h3>@item.title</h3>
                                                    <div class="meta-wrap">
                                                        <p class="meta">
                                                            <span>@item.datetime</span>
                                                        </p>
                                                        <p>
                                                            <span>@item.prise грн.</span>
                                                        </p>
                                                    </div>
                                                </div>
                                                <h3>@item.Subject.name</h3>
                                                <span class="tag">@Html.ActionLink("Подробно", "Details", new { id = item.id })</span>
                                            </div>
                                        </div>
                                }
                                else
                                {
                                <div class="photography-entry img image-popup d-flex justify-content-center align-items-center">
                                    <div class="overlay"></div>
                                    <div class="text text-center">
                                        <div class="text text-2 pt-2 mt-3">
                                            <h3>@item.title</h3>
                                            <div class="meta-wrap">
                                                <p class="meta">
                                                    <span>@item.datetime</span>
                                                </p>
                                                <p>
                                                    <span>@item.prise грн.</span>
                                                </p>
                                            </div>
                                        </div>
                                        <h3>@item.Subject.name</h3>
                                        <span class="tag">@Html.ActionLink("Подробно", "Details", new { id = item.id })</span>
                                    </div>
                                </div>
                                }
                                </div>
                            }
                            </div><!-- END-->

                        @*Пагинация*@
                        <div class="row mt-1">
                            <div class="col text-center">
                                <div class="block-27">
                                    @Html.PagedListPager(Model, page=>Url.Action("UserAds", new {page=page,id = @ViewBag.id }))
                                </div>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </section>
      

