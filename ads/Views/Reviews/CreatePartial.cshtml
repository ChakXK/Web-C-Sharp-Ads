@model ads.Models.Review
@using Microsoft.AspNet.Identity

<div class="comment-form-wrap pt-5">
    <h3 class="mb-5">Написать отзыв</h3>
        @using (Html.BeginForm("Create", "Reviews", FormMethod.Post))
        {
            @Html.AntiForgeryToken()
            @Html.HiddenFor(model => model.idSender)
            @Html.HiddenFor(model => model.idRecipient)
            <div class="col text-center">
                <div class="form-group">
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.text, new
                   {
                       htmlAttributes = new
                       {
                           @class = "form-control",
                           @cols = "30",
                           @rows = "4"
                       }
                   })
                        @Html.ValidationMessageFor(model => model.text, "", new { @class = "text-danger" })
                    </div>
                </div>
                </div>
                <div class="sidebar-box col text-center">
                    <div class="form-group">
                        <input type="submit" value="Отправить" class="btn btn-primary py-3 px-5">
                    </div>
                    </div>
        }
                </div>






